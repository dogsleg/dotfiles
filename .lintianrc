# Enable info tags by default (--display info)
display-info = yes

# Enable pedantic tags by default (--pedantic)
pedantic = wild-guess

# Enable experimental tags by default (--display-experimental)
display-experimental = yes

# Disable colored output for terminal output (--color)
color = never

# Show overridden tags (--show-overrides)
show-overrides = yes

# Show all repeating warnings (--tag-display-limit)
tag-display-limit = 0
